{
	"manifest_version": 2,
	"name": "FB x/close button fixer",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["content_script.js"],
			"run_at": "document_end"
		}
	],
	"icons": { "16": "logo.png", "48": "logo.png", "128": "logo.png" },
	"permissions": ["tabs", "<all_urls>"]
}
